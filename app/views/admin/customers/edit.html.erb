<div class="container">
  <div class="row">
    <div class="admin-customer-show col-md-12">
    <div class="title">
      <p><%= @customer.full_name %>さんの会員紹介</p>
    </div>
      <table>
        <tbody>
        <%= form_with model: @customer, url:admin_customer_path, local:true do |f| %>
          <tr>
            <th>氏名</th>
            <td>&emsp;<%= f.text_field :last_name %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td>&emsp;<%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td>&emsp;<%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td>&emsp;<%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td>&emsp;<%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>&emsp;<%= f.text_field :email %></td>
            </td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              &emsp;<%= f.radio_button :is_active, false, checked: "checked" %>有効&emsp;
              <%= f.radio_button :is_active, true, checked: "checked" %>退会</td>
          </tr>
        </tbody>
      </table>
      <div class="actions">
        <%= f.submit "変更を保存", class:"btn btn-sm btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>