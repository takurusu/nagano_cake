<div class="container">
  <div class="row">
    <div class="title">
      <p><%= @customer.last_name %><%= @customer.first_name %>さんの会員紹介</p>
    </div>
    <div class="customer-contents">
      <p>会員ID<%= @customer.id %></p>
      <p>氏名<%= @customer.last_name %><%= @customer.first_name %></p>
      <p>フリガナ<%= @customer.last_name_kana %><%= @customer.first_name_kana %></p>
      <p>郵便番号<%= @customer.postal_code %></p>
      <p>住所<%= @customer.adress %></p>
      <p>電話番号<%= @customer.telephone_number %></p>
      <p>メールアドレス<%= @customer.email %></p>
      <p>会員ステータス<%= @customer.is_active %></p>
    </div>
    <div class="link">
      <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", root_path, class:"btn btn-success" %>
    </div>
  </div>
</div>