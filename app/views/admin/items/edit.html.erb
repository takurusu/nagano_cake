<div class="container px-5 px-sm-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品編集</h2>
        <%= form_with model: @item, url:admin_item_path, local:true do |f| %>
        <p>商品画像</p>
        <p>商品名</p>
        <%= f.text_field :name %>
        <p>商品説明</p>
        <%= f.text_area :introduction %>
        <p>ジャンル</p>
        <%= f.collection_select :genre_id, @genres, :id, :name, {:include_blank => true} %>
        <p>税抜価格</p>
        <%= f.text_field :price %>円
        <p>販売ステータス</p>
        <%= f.submit '変更を保存', class:"btn btn-success" %>
        <% end %>
        <p></p>
        <p></p>
    </div>
  </div>
</div>
