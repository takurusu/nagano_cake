<div class="container px-5 px-sm-5">
  <div class="row">
    <div class="admin-item-new col-md-12">
      <div class="title">
        <p>商品新規登録</p>
      </div>
      <%= form_with model: @item, url:admin_items_path, local:true do |f| %>
      <table>
        <tr>
          <th>商品画像</th>
          <td>&emsp;<%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td>&emsp;<%= f.text_field :name, :size => "30" %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td>&emsp;<%= f.text_area :introduction, :size => "32" %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td>&emsp;<%= f.collection_select :genre_id, @genres, :id, :name, {:include_blank => "--選択してください--"} %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td>&emsp;<%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            &emsp;<%= f.radio_button :is_active, true, checked: "checked" %>販売中&emsp;
            <%= f.radio_button :is_active, false, checked: "checked" %>販売停止中
          </td>
        </tr>
      </table>
       <div class="actions">
         <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
       </div>
      <% end %>
    </div>
  </div>
</div>
