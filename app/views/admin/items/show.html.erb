<div class="container px-5 px-sm-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品詳細</h2>
      <div class="item-image">
      </div>
      <thread>
        <p><%= attachment_image_tag @item, :image_id, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></p>
        <p>商品名</p>
        <%= @item.name %>
        <p>商品説明</p>
        <%= @item.introduction %>
        <p>ジャンル</p>
        <%= @item.genre.name %>
        <p>税込価格（税抜価格)</p>
        <%= @item.price %>
        <p>販売ステータス</p>
        <%= @item.is_active %>
        <%= link_to "編集する", edit_admin_item_path ,class:"btn btn-success" %>
      </thread>
    </div>
  </div>
</div>
