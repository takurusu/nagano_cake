<div class="container">
  <div class="row">
    <div class="orders-show">
      <div class="title">注文履歴詳細</div>
      <div class="table-orders-1">
        <table>
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.full_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.full_address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
      </div>
      <table class="table table-stripped">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.unit_price %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.unit_price*order_item.amount %></td>
          <td><%= order_item.make_status %></td>
        </tr>
        <% end %>
      </table>
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_payment-800 %>円</td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.total_payment %>円</td>
        </tr>
      </table>
      </div>
    </div>
  </div>
</div>