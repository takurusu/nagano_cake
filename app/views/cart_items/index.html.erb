<div class="container">
  <div class="row">
    <div class="title">
      <p>ショッピングカート</p>
      <table class="table table-stripped">
        <tbody>
          <tr>
            <% @cart_items.each do |cart_item| %>
            <td>
              <p>商品名</p>
              <%= cart_item.item.name %>
              <p>単価（税込）</p>
              <%= cart_item.item.price %>
              <p>数量</p>
              <%= cart_item.amount %>
              <p>小計</p>
              <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class:"btn btn-sm btn-danger" %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="link">
        <%= link_to "買い物を続ける", items_path, class:"btn btn-success" %>
        <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>