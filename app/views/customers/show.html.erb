<div class="container">
  <div class="row">
    <div class="mypage">
    <div class="title">
      <p>マイページ</p>
    </div>
      <table border="1" width="600" height="300">
        <tbody>
        <div class="sub-title">登録情報&emsp;<%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-sm btn-success", data: {"turbolinks"=>false} %></div>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="mypage-link">
        <p>配送先&emsp;&emsp;<%= link_to "一覧を見る", addresses_path, class:"btn btn-sm btn-primary" %></p>
        <p>注文履歴&emsp;<%= link_to "一覧を見る", root_path, class:"btn btn-sm btn-primary" %></p>
      </div>
    </div>
  </div>
</div>