<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <p>ジャンル検索</p>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="title">
        <p>商品一覧</p>
      </div>
      <div class="items">
        <h2>新着商品</h2>
        <div class="items">
          <% @items.each do |item| %>
            <%= link_to item_path(item) do %>
              <%= item.name %>
            <% end %>
            <%= item.price %>
          <% end %>
        </div>
      </div>
  </div>
</div>