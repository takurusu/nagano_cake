<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div class="genre-index">
        <p>ジャンル検索</p>
        <% @genres.each do |genre| %>
          <p><%= genre.name %></p>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="title">
        <p>商品一覧(全x件）</p>
      </div>
      <div class="items">
        <div class="items">
          <% @items.each do |item| %>
            <p><%= attachment_image_tag item, :image_id, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></p>
            <p><%= link_to item_path(item) do %>
                <%= item.name %>
               <% end %></p>
            <p><%= item.price %></p>
          <% end %>
        </div>
      </div>
  </div>
</div>