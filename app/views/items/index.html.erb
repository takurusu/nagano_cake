<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'homes/list', genres: @genres %>
    <div class="col-md-8 offset-md-1">
    <div class="items-box">
      <div class="title">
        <p>商品一覧(全x件)</p>
      </div>
      <div class="items-index">
          <% @items.each do |item| %>
          <div>
            <p><%= attachment_image_tag item, :image_id, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></p>
            <p><%= link_to item_path(item) do %>
                <%= item.name %>
               <% end %></p>
            <p>¥<%= item.price %></p>
          </div>
          <% end %>
        </div>
      </div>
      </div>
  </div>
</div>