<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'homes/list', genres: @genres %>
    <div class="col-md-8 offset-md-1">
    <div class="items-box">
      <div class="title">
        <p>商品一覧(全<%= Item.count %>件)</p>
      </div>
      <div class="items-index">
          <% @items.each do |item| %>
          <div>
            <p>
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag item, :image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </p>
            <p><%= item.name %></p>
            <p>¥<%= converting_to_jpy(item.price) %></p>
          </div>
          <% end %>
      </div>
      <div class="paging"><%= paginate @items %></div>
    </div>
    </div>
  </div>
</div>