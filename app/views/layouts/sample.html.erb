<div class="container">
  <div class="row">
    <div class="customer-sign-up col-md-12">
    <div class="title">
      <p>新規会員登録</p>
    </div>
      <table>
        <tbody>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <tr>
            <th>名前</th>
            <td>
              &emsp;<%= f.label :（性） %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
              &emsp;<%= f.label :（名） %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              &emsp;<%= f.label :（セイ） %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
              &emsp;<%= f.label :（メイ） %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :メールアドレス %></th>
            <td>&emsp;<%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th><%= f.label :郵便番号（ハイフンなし） %></th>
            <td>&emsp;<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
          </tr>
          <tr>
            <th><%= f.label :住所 %></th>
            <td>&emsp;<%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
          </tr>
          <tr>
            <th><%= f.label :電話番号（ハイフンなし） %></th>
            <td>&emsp;<%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
            </td>
          </tr>
          <tr>
            <th><%= f.label :パスワード（6文字以上） %></th>
            <td>
              &emsp;<% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
          　</td>
          </tr>
          <tr>
            <th><%= f.label :パスワード（確認用） %></th>
            <td>&emsp;<%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="actions">
         <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
      </div>
      <% end %>
      <div class="title">
        <p>既に登録済みの方</p>
      </div>
      <div class="contents">
        <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>