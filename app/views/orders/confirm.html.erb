<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="title">
        <p>注文情報確認</p>
      </div>
      <table class="table table-stripped">
        <tbody>
          <tr>
            <% @cart_items.each do |cart_item| %>
            <td>
              <p>商品名</p>
              <%= cart_item.item.name %>
              <p>単価（税込）</p>
              <%= cart_item.item.price %>
              <p>数量</p>
              <%= cart_item.amount %>
              <p>小計</p>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
　　　<div class="link">
　　　  <%= link_to "確認画面へ進む", orders_confirm_path(@order), class:"btn btn-sm btn-primary" %>
　　　</div>
    </div>
  </div>
</div>