<div class="container">
  <div class="row">
    <div class="orders-show col-md-12">
      <div class="title"><p>注文履歴詳細</p></div>
      <div class="table-orders-info">
      <div class="table-orders-1">
        <div class="orders-show-subtitle">注文情報</div>
        <table border="1">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.to_s(:datetime_jp) %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.full_address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
      </div>
      <div>
      <table border="1">
        <div class="orders-show-subtitle">請求情報</div>
        <tr>
          <th>商品合計</th>
          <td><%= converting_to_jpy(@order.total_payment-800) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= converting_to_jpy(@order.total_payment) %></td>
        </tr>
      </table>
      </div>
      </div>
      <div class="orders-show-subtitle">注文内容</div>
      <table border="1" class="table table-stripped">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= converting_to_jpy(order_item.unit_price) %></td>
          <td><%= order_item.amount %></td>
          <td><%= converting_to_jpy(order_item.unit_price*order_item.amount) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>